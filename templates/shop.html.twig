{% extends "base.html.twig" %}

{% block title %}Sklep Internetowy{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <!-- Pole wyszukiwania -->
            <div class="col-md-3 mb-3">
                <h4>Wyszukaj produkt</h4>
                <form method="GET" action="">
                    <div class="form-group">
                        <input type="text" name="search" class="form-control" placeholder="Wpisz nazwę produktu" value="{{ search }}">
                    </div>
                    <button type="submit" class="btn btn-primary mt-2 w-100">Szukaj</button>
                </form>
            </div>
            <div class="col-md-9 mb-4">
                <div class="alert alert-info d-flex justify-content-between align-items-center">
                    <span><strong>Ilość ofert: {{ productsCount }}</strong></span>

                    <!-- Formularz sortowania -->
                    <form method="GET" action="" class="d-flex">
                        <label for="sortBy" class="me-2 mb-0">Sortuj:</label>
                        <select name="sortBy" id="sortBy" class="form-select">
                            <option value="price_asc" {% if sortBy == 'price_asc' %}selected{% endif %}>Od najtańszej</option>
                            <option value="price_desc" {% if sortBy == 'price_desc' %}selected{% endif %}>Od najdroższej</option>
                        </select>
                        <button type="submit" class="btn btn-primary ms-2">Sortuj</button>
                    </form>
                </div>
            </div>

            <!-- Sidebar z filtrami -->
            <aside class="col-md-3">
                <h4>Filtry</h4>
                <form method="GET" action="">
                    <div class="form-group">
                        <label for="category">Kategoria</label>
                        <select id="category" name="category" class="form-control">
                            <option value="">Wszystkie</option>
                            {% for categoryList in categories%}
                            <option value="{{categoryList.name}}">{{categoryList.name}}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group mt-2">
                        <label for="price">Cena max</label>
                        <input type="number" id="price" name="price" class="form-control" min="0" value="{{ price }}">
                    </div>
                    <button type="submit" class="btn btn-primary mt-3 w-100">Filtruj</button>
                </form>
            </aside>

            
            <!-- Główna sekcja z produktami -->
            <section class="col-md-9">
                <div class="row">
                    {% for product in products %}
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <a href="index.php?page=product_detail&product_id={{product.id}}">
                                {% if product.image is empty %}
                                    <img src="assets/no-image.jpg" class="card-img-top" alt="es">
                                {% else %}
                                    <img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                                {% endif %}

                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    </a>
                                    <p class="card-text">{{ product.description }}</p>
                                    <p class="card-text"><strong>{{ product.price }} PLN</strong></p>
                                    <form method="POST" action="">
                                        <input type="hidden" name="product_id" value="{{ product.id }}">
                                        <div class="form-group">
                                            <label for="quantity">Ilość:</label>
                                            <input type="number" name="quantity" class="form-control" value="1" min="1">
                                        </div>
                                        <button type="submit" class="btn btn-success mt-2">Dodaj do koszyka</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p>Brak produktów spełniających kryteria.</p>
                    {% endfor %}
                <div class="d-flex justify-content-center my-4 align-items-center">
                   <!-- Link do koszyka w prawym dolnym rogu -->
                    <a href="index.php?page=cart" class="btn btn-success btn-circle position-fixed bottom-0 end-0 m-3">
                        <i class="bi bi-cart-fill"></i> <!-- Ikonka koszyka -->
                            {% if cartCount > 0 %}
                            <span class="badge rounded-pill bg-dark text-light position-absolute top-0 start-100 translate-middle">
                                {{cartCount}}
                            </span>
                            {%endif %}
                    </a>
                    <!-- Przycisk "Poprzednia" -->
                    {% if currentCount > 1 %}
                        <a href="?page=shop_view&category={{ category }}&price={{ price }}&count={{ currentCount - 1 }}" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> <!-- Strzałka w lewo -->
                        </a>
                    {% else %}
                        <span class="btn btn-secondary disabled">
                            <i class="bi bi-arrow-left"></i> <!-- Strzałka w lewo -->
                        </span>
                    {% endif %}

                    <!-- Wyświetlanie bieżącej strony i całkowitej liczby stron -->
                    <span class="mx-3">Strona {{ currentCount }} z {{ totalPages }}</span>

                    <!-- Przycisk "Następna" -->
                    {% if currentCount < totalPages %}
                        <a href="?page=shop_view&category={{ category }}&price={{ price }}&count={{ currentCount + 1 }}" class="btn btn-primary ms-3">
                            <i class="bi bi-arrow-right"></i> <!-- Strzałka w prawo -->
                        </a>
                    {% else %}
                        <span class="btn btn-secondary disabled ms-3">
                            <i class="bi bi-arrow-right"></i> <!-- Strzałka w prawo -->
                        </span>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
{% endblock %}
